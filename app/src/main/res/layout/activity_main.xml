<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="My Training Place"
        android:gravity="center"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        />

    <Button
        android:id="@+id/to_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RecycleView"
        />

    <Button
        android:id="@+id/to_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fragment"
        />

    <Button
        android:id="@+id/to_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Navigation"/>

    <Button
        android:id="@+id/to_loopJ"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LoopJ"/>

    <Button
        android:id="@+id/to_retrofit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Retrofit"/>

    <Button
        android:id="@+id/to_viewmodel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Model"/>

    <Button
        android:id="@+id/to_live_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Live Data"
        />

    <Button
        android:id="@+id/to_ldp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Local Data Persistance"/>

    <Button
        android:id="@+id/to_task"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Task"/>

    <Button
        android:id="@+id/to_testing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Testing"/>


</LinearLayout>