<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/navigationHomeFragment">

    <fragment
        android:id="@+id/navigationHomeFragment"
        android:name="com.example.myapplication.navigation.NavigationHomeFragment"
        android:label="fragment_navigation_home"
        tools:layout="@layout/fragment_navigation_home" >
        <action
            android:id="@+id/action_navigationHomeFragment_to_navigationCategoryFragment"
            app:destination="@id/navigationCategoryFragment" />
        <action
            android:id="@+id/action_navigationHomeFragment_to_navigationProfileActivity"
            app:destination="@id/navigationProfileActivity"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            />
    </fragment>
    <fragment
        android:id="@+id/navigationCategoryFragment"
        android:name="com.example.myapplication.navigation.NavigationCategoryFragment"
        android:label="fragment_navigation_category"
        tools:layout="@layout/fragment_navigation_category" >
        <action
            android:id="@+id/action_navigationCategoryFragment_to_navigationDetailCategoryFragment"
            app:destination="@id/navigationDetailCategoryFragment" />
    </fragment>
    <activity
        android:id="@+id/navigationProfileActivity"
        android:name="com.example.myapplication.navigation.NavigationProfileActivity"
        android:label="activity_navigation_profile"
        tools:layout="@layout/activity_navigation_profile" />
    <fragment
        android:id="@+id/navigationDetailCategoryFragment"
        android:name="com.example.myapplication.navigation.NavigationDetailCategoryFragment"
        android:label="fragment_navigation_detail_category"
        tools:layout="@layout/fragment_navigation_detail_category" >
        <action
            android:id="@+id/action_navigationDetailCategoryFragment_to_navigationHomeFragment"
            app:destination="@id/navigationHomeFragment"
            app:launchSingleTop="true"
            app:popUpTo="@layout/fragment_navigation_home"
            app:popUpToInclusive="true"
            />
    </fragment>
</navigation>